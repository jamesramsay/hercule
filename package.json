{
  "name": "hercule",
  "version": "5.0.0",
  "description": "Markdown, API Blueprint and string transclusion",
  "main": "./lib/hercule",
  "scripts": {
    "test": "npm run test-units && npm run test-integration && npm run test-cli",
    "test-units": "nyc --cache ava --verbose test/units",
    "test-integration": "ava --verbose test/integration",
    "test-cli": "npm run compile && bats test/bats",
    "posttest": "npm run lint",
    "coverage": "nyc report --reporter=html && open coverage/lcov-report/index.html",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "compile": "babel src --out-dir lib --source-maps && npm run compile-grammars",
    "compile-grammars": "pegjs -o grammars/link.js grammars/link.pegjs",
    "lint": "eslint ./src ./test",
    "release:major": "npm version major && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:patch": "npm version patch && git push --follow-tags",
    "benchmark": "./test/benchmark.js",
    "precommit": "lint-staged"
  },
  "engines": {
    "node": ">=8.10.0"
  },
  "publishConfig": {
    "tag": "next"
  },
  "ava": {
    "require": [
      "@babel/register"
    ]
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "grammars",
      "test"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "git add"
    ]
  },
  "bin": {
    "hercule": "./bin/hercule"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesramsay/hercule.git"
  },
  "keywords": [
    "markdown",
    "transclude",
    "transclusion",
    "api",
    "blueprint",
    "documentation",
    "apiary",
    "preprocessor"
  ],
  "author": {
    "name": "James Ramsay",
    "url": "http://jramsay.com.au"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamesramsay/hercule/issues"
  },
  "homepage": "https://github.com/jamesramsay/hercule",
  "dependencies": {
    "async": "^2.1.4",
    "clone-regexp": "^2.1.0",
    "duplexer3": "^0.1.4",
    "get-stream": "^5.0.0",
    "got": "^9.0.0",
    "isstream": "^0.1.2",
    "left-split": "^1.0.0",
    "lodash": "^4.0.0",
    "meow": "^5.0.0",
    "source-map": "^0.7.0",
    "through2": "^3.0.0",
    "through2-get": "^0.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/register": "^7.0.0",
    "ava": "^1.0.1",
    "bats": "^1.0.0",
    "benchmark": "^2.1.3",
    "codecov": "^3.0.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-ava": "^5.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-lodash": "^4.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "lint-staged": "^8.0.0",
    "nock": "^11.1.0",
    "nyc": "^13.2.0",
    "pegjs": "^0.10.0",
    "prettier": "^1.13.0",
    "sinon": "^7.2.3",
    "stream-spigot": "^3.0.5"
  }
}
