{
  "name": "hercule",
  "version": "1.0.0",
  "description": "Markdown transcluder",
  "main": "./lib/hercule",
  "scripts": {
    "test": "NODE_ENV=test ./node_modules/.bin/mocha test --compilers coffee:coffee-script/register --reporter spec",
    "coverage": "NODE_ENV=test COVERAGE=1 ./node_modules/.bin/mocha --compilers coffee:coffee-script/register --require blanket --reporter html-cov > coverage.html && open coverage.html",
    "travis": "npm run test && NODE_ENV=test COVERAGE=1 ./node_modules/.bin/mocha --compilers coffee:coffee-script/register --require blanket --reporter mocha-lcov-reporter | ./node_modules/coveralls/bin/coveralls.js",
    "compile": "coffee --output lib -c src/*",
    "watch": "coffee --output lib -cw src/*"
  },
  "config": {
    "blanket": {
      "pattern": "src",
      "data-cover-never": "node_modules",
      "loader": "./node-loaders/coffee-script"
    }
  },
  "bin": {
    "hercule": "./bin/hercule"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesramsay/hercule.git"
  },
  "keywords": [
    "markdown",
    "transclude",
    "transclusion",
    "commonmark"
  ],
  "author": {
    "name": "James Ramsay",
    "url": "http://jramsay.com.au"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jamesramsay/hercule/issues"
  },
  "homepage": "https://github.com/jamesramsay/hercule",
  "dependencies": {
    "dashdash": "^1.7.0",
    "lodash": "^3.0.0",
    "pegjs": "^0.8.0",
    "request": "^2.58.0",
    "deasync": "^0.1.0"
  },
  "devDependencies": {
    "coffee-script": "^1.7.0",
    "mocha": "^2.2.5",
    "mocha-lcov-reporter": "^0.0.2",
    "nock": "^2.7.0",
    "assert-diff": "^1.0.1",
    "blanket": "^1.1.7",
    "coveralls": "^2.11.2"
  }
}
