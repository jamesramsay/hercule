{
  "name": "hercule",
  "version": "4.1.1",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "test": "npm run test-units && npm run test-integration && npm run test-cli",
    "test-units": "nyc --cache ava --verbose packages/**/test/units",
    "test-integration": "ava --verbose packages/**/test/integration",
    "test-cli": "npm run compile && bats packages/**/test/bats",
    "posttest": "npm run lint",
    "coverage": "nyc report --reporter=html && open coverage/lcov-report/index.html",
    "codecov": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "benchmark": "./packages/hercule-core/test/benchmark.js",
    "compile": "lerna-build && npm run compile-grammars",
    "compile-grammars": "mkdir -p ./packages/hercule-core/lib/grammar && pegjs -o packages/hercule-core/lib/grammar/link.js packages/hercule-core/src/grammar/link.pegjs",
    "lint": "eslint packages",
    "precommit": "lint-staged",
    "commitmsg": "validate-commit-msg"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "lib/grammar/link.js",
      "test"
    ]
  },
  "lint-staged": {
    "*.js": [
      "prettier",
      "git add"
    ]
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesramsay/hercule.git"
  },
  "author": {
    "name": "James Ramsay",
    "url": "http://jramsay.com.au"
  },
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.24.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "bats": "^0.4.2",
    "benchmark": "^2.1.4",
    "codecov": "^3.0.0",
    "eslint": "^4.8.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.6.0",
    "eslint-plugin-ava": "^4.0.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-lodash": "^2.4.0",
    "eslint-plugin-prettier": "^2.3.0",
    "husky": "^0.14.3",
    "lerna": "^2.5.1",
    "lerna-tools": "^1.0.0",
    "lint-staged": "^6.0.0",
    "nock": "^9.1.5",
    "nyc": "^11.4.1",
    "pegjs": "^0.10.0",
    "prettier": "^1.9.2",
    "sinon": "^4.1.3",
    "stream-spigot": "^3.0.6",
    "validate-commit-msg": "^2.14.0"
  }
}
