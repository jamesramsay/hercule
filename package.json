{
  "name": "hercule",
  "version": "4.0.0",
  "description": "Markdown, API Blueprint and string transclusion",
  "main": "./lib/hercule",
  "scripts": {
    "test": "npm run test-units && npm run test-integration && npm run test-cli",
    "test-units": "nyc --cache ava --verbose test/units",
    "test-integration": "ava --verbose test/integration",
    "test-cli": "npm run compile && .bats/bin/bats test/bats",
    "posttest": "npm run lint && npm run check-commit",
    "coverage": "nyc report --reporter=html && open coverage/lcov-report/index.html",
    "codecov": "nyc report --reporter=text-lcov | codecov",
    "compile": "babel src --out-dir lib --source-maps && npm run compile-grammars",
    "compile-grammars": "mkdir -p ./lib/grammar && pegjs -o lib/grammar/link.js src/grammar/link.pegjs",
    "lint": "eslint ./src ./test",
    "check-commit": "./scripts/commit-msg",
    "release:major": "npm version major && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:patch": "npm version patch && git push --follow-tags"
  },
  "engines": {
    "node": ">=4.0.0"
  },
  "publishConfig": {
    "tag": "next"
  },
  "ava": {
    "require": "babel-register",
    "babel": "inherit"
  },
  "nyc": {
    "exclude": [
      "node_modules",
      "lib/grammar/transclusion-link.js",
      "lib/grammar/inflate-link.js",
      "test"
    ]
  },
  "bin": {
    "hercule": "./bin/hercule"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamesramsay/hercule.git"
  },
  "keywords": [
    "markdown",
    "transclude",
    "transclusion",
    "api",
    "blueprint",
    "documentation",
    "apiary",
    "preprocessor"
  ],
  "author": {
    "name": "James Ramsay",
    "url": "http://jramsay.com.au"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamesramsay/hercule/issues"
  },
  "homepage": "https://github.com/jamesramsay/hercule",
  "dependencies": {
    "async": "^2.1.4",
    "clone-regexp": "^1.0.0",
    "dashdash": "^1.10.1",
    "duplexer3": "^0.1.4",
    "got": "^6.5.0",
    "isstream": "^0.1.2",
    "left-split": "^1.0.0",
    "lodash": "^4.0.0",
    "source-map": "^0.5.3",
    "through2": "^2.0.0",
    "through2-get": "^0.0.2"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.4.0",
    "babel-core": "^6.4.0",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.9.0",
    "codecov.io": "^0.1.6",
    "eslint": "^3.12.0",
    "eslint-config-airbnb-base": "^11.0.0",
    "eslint-plugin-ava": "^4.0.0",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-lodash": "^2.3.4",
    "nock": "^9.0.0",
    "nyc": "^10.0.0",
    "pegjs": "^0.10.0",
    "semver": "^5.1.0",
    "shelljs": "^0.7.0",
    "sinon": "^1.17.3",
    "stream-spigot": "^3.0.5"
  }
}
